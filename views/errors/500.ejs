  <style>
    body { font-family: Inter, Arial; background:#f4f6f9; margin:0; padding:40px; text-align:center; color:#334155; }
    .box { background:white; padding:30px; border-radius:10px; max-width:420px; margin:auto; box-shadow:0 4px 14px rgba(0,0,0,0.06); }
