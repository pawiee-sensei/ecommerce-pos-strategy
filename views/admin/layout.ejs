<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title || "Admin Panel" %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <style>
    :root {
      --bg: #f6f7fb;
      --sidebar-bg: #ffffff;
      --text: #1f2937;
      --text-muted: #6b7280;
      --accent: #2563eb;
      --accent-hover: #1e40af;
      --border: #e5e7eb;
      --radius: 10px;
      --shadow: 0 2px 10px rgba(0,0,0,0.05);
      --transition: .25s ease;
    }

    body {
      margin: 0;
      font-family: Inter, Arial, sans-serif;
      color: var(--text);
      display: flex;
      height: 100vh;
      background: var(--bg);
      overflow: hidden;
    }

    /* SIDEBAR */
    .sidebar {
      width: 240px;
      background: var(--sidebar-bg);
      display: flex;
      flex-direction: column;
      border-right: 1px solid var(--border);
      transition: width var(--transition);
      box-shadow: var(--shadow);
    }

    .sidebar.collapsed {
      width: 80px;
    }

    /* SIDEBAR HEADER */
    .sidebar-header {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 18px 20px;
      border-bottom: 1px solid var(--border);
    }

    #menu-btn {
      background: none;
      border: none;
      cursor: pointer;
      padding: 6px;
      border-radius: 8px;
      transition: background var(--transition);
    }

    #menu-btn:hover {
      background: #eef2f7;
    }

    #menu-btn svg {
      width: 26px;
      height: 26px;
      stroke: #4b5563;
    }

    .brand-title {
      font-size: 17px;
      font-weight: 600;
      letter-spacing: -0.2px;
      white-space: nowrap;
    }

    .sidebar.collapsed .brand-title {
      display: none;
    }

    /* NAV */
    .nav {
      display: flex;
      flex-direction: column;
      margin-top: 10px;
      padding: 0 8px;
      gap: 4px;
    }

    .nav a {
      display: flex;
      align-items: center;
      gap: 14px;
      padding: 12px 14px;
      text-decoration: none;
      font-size: 15px;
      border-radius: var(--radius);
      color: var(--text);
      transition: background var(--transition), color var(--transition);
      position: relative;
    }

    .nav a:hover {
      background: #f3f4f6;
    }

    /* ICONS */
    .nav svg {
      width: 20px;
      height: 20px;
      stroke: #4b5563;
      transition: stroke var(--transition);
    }

    /* ACTIVE ITEM */
    .nav a.active {
      background: #ebf2ff;
      color: var(--accent);
    }

    .nav a.active svg {
      stroke: var(--accent);
    }

    .nav a.active::before {
      content: "";
      position: absolute;
      left: -6px;
      top: 0;
      bottom: 0;
      width: 4px;
      background: var(--accent);
      border-radius: 0 4px 4px 0;
    }

    /* COLLAPSED MODE */
    .sidebar.collapsed a span {
      display: none;
    }

    .sidebar.collapsed .nav a {
      justify-content: center;
      padding: 12px 0;
    }

    /* FOOTER */
    .sidebar-footer {
      padding: 16px;
      margin-top: auto;
    }

    .logout-btn {
      width: 100%;
      padding: 10px;
      background: #e11d48;
      border: none;
      border-radius: 8px;
      color: white;
      cursor: pointer;
      transition: background var(--transition);
    }
    .logout-btn:hover {
      background: #be123c;
    }

    /* MAIN AREA */
    .main {
      flex-grow: 1;
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }

    .topbar {
      height: 60px;
      background: white;
      display: flex;
      align-items: center;
      justify-content: flex-end;
      padding: 0 22px;
      border-bottom: 1px solid var(--border);
      box-shadow: var(--shadow);
    }

    #panel-container {
      flex-grow: 1;
      overflow-y: auto;
      padding: 20px;
    }
  </style>
</head>
<body>

  <!-- SIDEBAR -->
  <aside class="sidebar" id="sidebar">
    <div class="sidebar-header">
      <button id="menu-btn">
        <svg fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M3 7h18M3 12h18M3 17h18"/>
        </svg>
      </button>
      <span class="brand-title">Commerce Control</span>
    </div>

    <nav class="nav">
      <a href="#" data-panel="dashboard" class="active">
        <svg fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M3 12h18M12 3v18"/>
        </svg>
        <span>Dashboard</span>
      </a>

      <a href="#" data-panel="products">
        <svg fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="3" y="3" width="18" height="18" rx="2"/>
          <path d="M3 9h18M9 21V9"/>
        </svg>
        <span>Products</span>
      </a>

      <a href="#" data-panel="pos">
        <svg fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="3" y="3" width="18" height="14" rx="2"/>
          <path d="M3 11h18"/>
        </svg>
        <span>POS</span>
      </a>

      <a href="#" data-panel="strategy">
        <svg fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M4 20h16M4 14l6-6 4 4 6-6"/>
        </svg>
        <span>Strategy</span>
      </a>
    </nav>

    <div class="sidebar-footer">
      <form method="POST" action="/logout">
        <button class="logout-btn">Logout</button>
      </form>
    </div>
  </aside>

  <!-- MAIN -->
  <div class="main">

    <div class="topbar">
      <span style="font-size:14px; color:var(--text-muted);">
        Logged in as <strong><%= user.username %></strong>
      </span>
    </div>

    <div id="panel-container">
      <div style="color:var(--text-muted); padding:20px;">
        Select a panel from the sidebar.
      </div>
    </div>
  </div>

  <script>
    // Sidebar collapse
    const sidebar = document.getElementById("sidebar");
    const menuBtn = document.getElementById("menu-btn");

    menuBtn.onclick = () => {
      sidebar.classList.toggle("collapsed");
    };

    // Dynamic panel loading + active highlight
    document.querySelectorAll(".nav a").forEach(link => {
      link.addEventListener("click", async e => {
        e.preventDefault();

        // ACTIVE highlight switch
        document.querySelectorAll(".nav a").forEach(a => a.classList.remove("active"));
        link.classList.add("active");

        // Load panel via AJAX
        const panel = link.getAttribute("data-panel");
        const res = await fetch(`/admin/panels/${panel}`);
        const html = await res.text();
        document.getElementById("panel-container").innerHTML = html;
      });
    });
  </script>

</body>
</html>
